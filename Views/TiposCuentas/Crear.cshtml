@model TipoCuenta
@{
    ViewData["Title"] = "Crear tipo cuenta";
}
<h1>Crear tipo de Cuenta</h1>
<h5>EL tipo de cuenta se refiere a como podemos agrupar las cuentas.
    Ejemplo: Prestamos tarjeta de credito, etc
</h5>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-controller="TiposCuentas" asp-action="Crear">
        <div class="mb-3">
                <label asp-for="Nombre" class="form-label"></label>
                <input type="type" asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Enviar</button>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}